<div class="header-wrap">
  <div class="container"> 
    <div class="row"> 
      <div class="col-md-3 col-sm-3">
        <div class="logo"><%= link_to image_tag("logo.png"), root_path %></div>
      </div>
      <div class="col-md-5 col-sm-9"> 
        <div class="navigationwrape">
          <div class="navbar navbar-default" role="navigation">
            <div class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                <li><%= link_to t("static_pages.home.title"), root_path %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-sm-12">
        <div class="header-right">
          <div class="user-wrap">
            <% if logged_in? %>
              <ul class="nav navbar-nav">
                <li class="dropdown">
                  <a href="#" class="" data-toggle="dropdown">
                    <%= current_user.username %><b class="caret"></b>
                  </a>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to t("user.create_profile"), new_profile_path(id: current_user.id) %>
                      </li>
                      <li>
                        <%= link_to t("user.show_profiles"), user_path(id: current_user.id) %>
                      </li>
                      <li>
                        <%= link_to t("user.logout"), logout_path, method: :delete %>
                      </li>
                    </ul>
                </li>
              </ul>  
            <% else %>
              <div class="login-btn"><%= link_to t("user.login"), login_path %></div>
              <div class="register-btn"><%= link_to t("user.register") ,"#" %></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

