<li class="mt-10">
  <div class="row comments">
    <div class="col col-ms-12 col-md-12 col-lg-12">
      <div class="row">
        <div class="col col-ms-2 col-md-2 col-lg-3 avatar">
          <%= image_tag comment.user.avatar %>
        </div>
        <div class="col col-ms-10 col-md-10 col-lg-9">
          <div class="row">
            <div class="col col-ms-12 col-md-12 col-lg-12">
              <div class="float-left">
                <span class="user-name"><%= comment.user.username %></span>
                <span class="time-comment">(<%= time_ago_in_words comment.created_at %>)</span>
              </div>
              <div class="float-right"> 
                <span class="action-comment">
                  <% if current_user? comment.user %>
                    <%= link_to edit_post_comment_path(post_id: @post.id, id: comment.id), class: "edit-comment",data: {toggle: "tooltip"}, title: t("comment.edit"),remote: true do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to delete_comment_url(@post, comment), method: :delete, data:{toggle: "tooltip", confirm: t("comment.check")}, title: t("comment.delete"), class: " alert-danger", remote: true do %>
                      <i class="fas fa-trash"></i>
                    <% end%>
                  <% end%>
                </span>                      
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col col-ms-12 col-md-12 col-lg-12">
              <div class="comment-body">
                <div id="form-comment-<%= comment.id %>">
                  
                </div>
                <p class="comment-content">
                  <%= comment.content %>
                </p>
                <div class="cancel-comment">
                  <%= t "comment.cancel_comment" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</li>
